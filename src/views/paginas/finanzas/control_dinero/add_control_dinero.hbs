<form action="/finanzas/add/control_dinero" method="POST" class="contenedor_form">
	<div class="contenedor_inputs">
		<input type="datetime-local" id="fecha_inicio" required name="fecha_inicio" required class="color_verde">
		<input type="text" name="control_dinero_cantidad" required placeholder="Monto" class="color_azul" required>
		<input type="text" id ="id_select" name="id_select" class="color_blanco" placeholder="" hidden>
		<select type="text" name="control_dinero_tipo_dinero" required placeholder="Selecione Estilo de Comida" class="color_gris" value="" onchange="capturar_id()" id="mySelect">
		<option>--Seleccione Estilo--</option>
		{{#each Tipo_Dinero}}
		<option  style="color: {{color}}" id="{{id}}">{{simbolo}}</option>
		{{/each}}
		</select>
		<textarea type="text" name="control_dinero_descripcion" placeholder="Descripcion" class="color_blanco" required></textarea>
		
	</div>
	<input type="submit" value="Enviar" class="btn_enviar">
</form>

<script type="text/javascript" src="/codigo/Autocompletar_fecha_actual.js"></script>
