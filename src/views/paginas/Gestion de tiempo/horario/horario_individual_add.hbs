{{> menu_gestion_tiempo}}

<div class="contenedor_titulo">
	<h2 class="titulo_formulario_metas C-blanco B-gris_oscuro">Agregar tarea Aparte</h2>
</div>

<form action="/gestion_tiempo/horario/individual/add/{{id}}" method="POST" class="formulario_metas_contenedor">
	<div>
		<p>Titulo</p>
		<input type="text" name="titulo" required placeholder="Titulo de Meta" class="C-blanco" required>
	</div>
	
	<div>
		<p>Hora Inicio</p>
		<input type="time" name="hora_inicio" required placeholder="Hora de inicio" class="color_marron" required>
	</div>
	
	<div>
		<p>Hora Fin</p>
		<input type="time" name="hora_fin" required placeholder="Hora Fin" class="color_verde_oscuro" required>
	</div>

	<button>Enviar</button>
</form>