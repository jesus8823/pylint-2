<h2 class="titulo_principal">Editar nota <b class="color_verde">{{Datos.descripcion}}</b></h2>
<form action="/actividad/notas/edit/{{Datos.id}}" method="POST" class="contenedor_form">
	<div class="contenedor_inputs">
	<input type="text" name="descripcion" value="{{Datos.descripcion}}" required placeholder="descripcion" class="color_blanco">
	<input type="date" name="fecha" value="{{Datos.fecha}}" required class="color_verde">
</div>
	<input type="submit" value="Enviar" class="btn_enviar">
</form>